<Window x:Class="Arrange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arrange"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="米样统计" Height="406.995" Width="679.909" WindowStyle="ToolWindow">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <ListBox Margin="1" Grid.Row="0" ItemsSource="{Binding Logs, Source={x:Static local:Processor.Instance}}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="1" HorizontalAlignment="Right">
            <Button x:Name="OpenExcel" Content="打开Excel" Width="100" Click="OpenExcel_Click" HorizontalAlignment="Center" Margin="1"/>
            <Button  Margin="1" Width="100" HorizontalAlignment="Right" Content="关闭" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
